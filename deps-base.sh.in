#!/usr/bin/env bash

set -e

DESC="small and simple base packages"
LIST=packages.base

echo "[*] ==================================================="
echo "[*] ================= $LIST"
export XBPS_ARCH=x86_64

xbps-install -Syu

xbps-install -S \
  --repository=http://alpha.de.repo.voidlinux.org/current/nonfree \
  --repository=http://alpha.de.repo.voidlinux.org/current \
  -c /work/xbps-cachedir-x86_64 \
  $(grep -h '^[^#].' ${LIST}) \
  -y
